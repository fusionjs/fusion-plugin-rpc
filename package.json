  "devDependencies": {
    "babel-eslint": "8.2.2",
    "create-universal-package": "3.4.1",
    "eslint": "4.18.1",
    "eslint-config-fusion": "^1.0.0",
    "eslint-config-uber-universal-stage-3": "1.0.0-rc.7",
    "eslint-plugin-cup": "1.0.0",
